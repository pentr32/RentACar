@model NewRentCar.Models.CarModel
@{
    ViewBag.Title = "Add a new car";
}

<div class="container">

    <div class="row">
        <form asp-action="AddNewCar" method="get">
            <div class="form-group w-auto h-auto">
                <label asp-for="NumberPlate"></label>
                <input asp-for="NumberPlate" class="form-control" />
                <label asp-for="IsCarWashed"></label>
                <span asp-validation-for="IsCarWashed" style="color:red;"></span>
                <select class="form-control" asp-for="IsCarWashed">
                    <option>Choose an option</option>
                    <option>True</option>
                    <option>False</option>
                </select>
                <label asp-for="RentPrice"></label>
                <input asp-for="RentPrice" class="form-control" />
                <label asp-for="Brand"></label>
                <input asp-for="Brand" class="form-control" />
                <label asp-for="Model"></label>
                <input asp-for="Model" class="form-control" />
                <label asp-for="Color"></label>
                <input asp-for="Color" class="form-control" />
                <label asp-for="Seats"></label>
                <input asp-for="Seats" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Add car</button>
        </form>
    </div>
</div>

