@model NewRentCar.Models.CustomerModel

<div class="row justify-content-center align-items-center w-100 h-100">
    <div class="bg-primary panel-body"><h2>A new customer was added</h2></div><br />

    <h2>Velkommen @Model.CustomerName</h2>
    <table class="table table-bordered table-striped">
        <tr><th>ID:</th><td>@Model.CustomerID</td></tr>
        <tr><th>Name:</th><td>@Model.CustomerName</td></tr>
        <tr><th>Saldo:</th><td>@Model.CustomerSaldo</td></tr>
    </table>
</div>
